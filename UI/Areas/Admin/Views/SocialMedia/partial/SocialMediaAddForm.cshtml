@model DataTransfarLayer.SocialMediaDataTransfer

<div class="box-body">

    <div class="form-group">
        <label class="form-label">Social Media Name</label>
        <div class="col-md-10">
            @Html.DropDownList("SocialName", new SelectList(new[] { "Facebook", "Whatsapp", "Instagram", "Twitter(X)", "TikTok" }), new { @class = "form-control select" })
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Social Media Link</label>
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @placeholder = "Social Media Link" })
            @Html.ValidationMessageFor(x => x.Link, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Social Media Image</label>
        <input type="file" name="SocialMediaImage" accept="image/gif, imgage/png, image/jpg, image/jpeg" onchange="$('#SocialImage')[0].src = window.URL.createObjectURL(this.files[0]), $('#SocialImage').removeAttr('hidden')" />
        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img src="" width="200" height="200" id="SocialImage" />
        }
        else
        {
            <br />
            <img src="" hidden width="200" height="200" id="SocialImage" alt="image is loading" />
        }
    </div>


    <input type="number" name="MetaId" value="@Model.SocialId" hidden />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>




</div>


