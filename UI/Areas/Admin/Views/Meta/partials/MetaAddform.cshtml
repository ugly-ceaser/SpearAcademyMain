@model DataTransfarLayer.MetaDataTransfer

@using (Html.BeginForm("Index", "Meta", FormMethod.Post))
{

<div class="box-body">



    <div class="form-group">
        <label class="form-label">Meta Content</label>
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.MetaContent, new { @class = "form-control", @placeholder = "Meta Content" })
            @Html.ValidationMessageFor(x => x.MetaContent, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <label class="form-label">Name</label>
        <div class="col-md-10">
            @Html.DropDownList("MetaName", new SelectList(new[] { "Keyword", "Descriptions", "Author" }), new { @class = "form-control select2" })

        </div>
    </div>
    <input type=" number" name="MetaId" value="@Model.MetaId" hidden />





    



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>


</div>

    <div>

    </div>


}

